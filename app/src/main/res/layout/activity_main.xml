            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.17"
            app:layout_constraintVertical_bias="0.046" android:textSize="30sp"/>
